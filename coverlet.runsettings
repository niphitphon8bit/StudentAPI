<?xml version="1.0" encoding="utf-8"?>
<RunSettings>
  <DataCollectionRunSettings>
    <DataCollectors>
      <DataCollector friendlyName="XPlat code coverage">
        <Configuration>
          <Format>cobertura</Format>
          <!-- Only include concrete product namespaces -->
          <Include>[StudentAPI]StudentAPI.Controllers.*;[StudentAPI]StudentAPI.Data.*;[StudentAPI]StudentAPI.Models.*</Include>
          <!-- Exclude generated or low-value files from coverage (belt-and-suspenders) -->
          <ExcludeByFile>**/Migrations/*.cs;**/Program.cs;**/Controllers/WeatherForecastController.cs</ExcludeByFile>
          <!-- Ignore compiler generated types (async state machines, lambdas, etc.) -->
          <ExcludeByAttribute>CompilerGeneratedAttribute</ExcludeByAttribute>
        </Configuration>
      </DataCollector>
    </DataCollectors>
  </DataCollectionRunSettings>
</RunSettings>
